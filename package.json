{
  "name": "tisdagsgolfen",
  "description": "Backend for Tisdagsgolfen app",
  "private": true,
  "version": "2.0.0",
  "author": "Kim Fransman <kim.fransman@gmail.com>",
  "repository": "https://github.com/kimf/tisdagsgolfen-backend-2020",
  "homepage": "https://tisdagsgolfen.fransman.se",
  "license": "MIT",
  "scripts": {
    "format": "npx prettier --write './**/*.{ts,md}' '!./prisma/**/*.md'",
    "dev": "nexus dev",
    "build": "nexus build -d heroku",
    "start": "node node_modules/.build",
    "typegen:nexus": "cnt --mq -f -o --outDir ./src/graphql",
    "typegen:ts": "create-types"
  },
  "dependencies": {
    "nexus-future": "^0.11.2",
    "nexus-plugin-prisma": "^0.5.0"
  },
  "devDependencies": {
    "create-nexus-type": "^1.1.7",
    "husky": "^4.2.3",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": "13.x"
  }
}
